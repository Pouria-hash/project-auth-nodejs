<% layout('./layouts/boilerplate') %>


    <div class="row d-flex justify-content-center aligen-items-center">
        <div class="col-md-6">
            <div class="card shadow " style='border-radius: 10px; overflow: hidden'>
                <div class="d-flex justify-content-center align-items-center" style='height: 130px;
            background: linear-gradient(to top , #e04d398c , #e44e3bc7) ;
            background-size: cover;'>
                    <h2 class="text-white">Register Form</h2>


                </div>
                <div class="p-3">
                    <form action="/register" method="POST" class="validation-form" novalidate>
                        <div class='row'>
                            <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" autofocus type="text" name="username" id="username"
                                        required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please type a valid Username.
                                    </div>
                                </div>

                            </div>
                            <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="name">Name</label>
                                    <input class="form-control" type="text" name="name" id="name" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please type a valid Username.
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" name="password" id="password" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please type a valid password.
                                    </div>
                                </div>

                            </div>
                            <div class="col-12 col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" for="confirm-password">Confirm Password</label>
                                    <input class="form-control" type="password" name="confirmPassword"
                                        id="confirm-password" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please type a valid password.
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class=" invalid-feedback">
                                Please type a valid Email.
                            </div>
                        </div>
                        <div>
                            <p>Have an account? <a href='/login'>Login</a></p>
                        </div>
                        <div>
                            <button class="btn btn-primary mt-3 px-5">Register</button>
                        </div>
                </div>
            </div>

            </form>
        </div>
    </div>
    </div>
    </div>