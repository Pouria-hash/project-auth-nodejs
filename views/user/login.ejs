<% layout('./layouts/boilerplate') %>

    <div class="row d-flex justify-content-center aligen-items-center">
        <div class="col-md-6 ">
            <div class="card shadow mb-5" style='border-radius: 10px; overflow: hidden'>
                <div class="d-flex justify-content-center align-items-center" style='height: 150px;
                 background: linear-gradient(to top , #e04d398c , #e44e3bc7) ;
                 background-size: cover;
                 '>
                    <h2 class='text-white'>Welcome to Pattern</h2>

                </div>
                <div class="p-3">
                    <form action="/login" method="POST" class="validation-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" autofocus name="username" id="username" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class="invalid-feedback">
                                Please type a valid Username.
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <div class="valid-feedback">
                                    Looks Good!
                                </div>
                                <div class="invalid-feedback">
                                    Please type a valid password.
                                </div>
                            </div>
                            <div>
                                <p>Don't have an account? <a href='/register'>Sign up</a></p>
                            </div>
                            <div>
                                <p>Forget your password? <a href='/forget_password'>Find your password</a></p>
                            </div>
                        </div>
                        <div class="">
                            <button class="btn btn-primary mt-3 px-5">Log In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>