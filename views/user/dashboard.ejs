<% layout('./layouts/boilerplate') %>

    <div class="row d-flex ">
        <div class="col-xs-12 col-md-7 col-lg-6">
            <div class="card shadow mb-2 p-2">

                <div class="p-3">
                    <h1>Hi <%= currentUser.username.toUpperCase() %>
                    </h1>

                    <form action="/dashboard?_method=PUT" method="POST" class="validation-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input class="form-control" type="text" value="<%= currentUser.name%>" autofocus name="name"
                                id="name" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class="invalid-feedback">
                                Please type a valid Username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" value="<%= currentUser.email  %> " type="email" autofocus
                                name="email" id="email" required>
                            <div class="valid-feedback">
                                Looks Good!
                            </div>
                            <div class="invalid-feedback">
                                Please type a valid Username.
                            </div>
                        </div>
                        <div class='row justify-content-between mb-3'>
                            <div class="col">
                                <small>If you want to change password click on button</small>

                            </div>
                            <div class="col">
                                <button type='button' class="btn btn-danger" id='change-password-button'>
                                    Change Password
                                </button>

                            </div>
                        </div>
                        <div id='password-container' style='display:none;'>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password">
                                <div class="valid-feedback">
                                    Looks Good!
                                </div>
                                <div class="invalid-feedback">
                                    Please type a valid password.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="new-password">New Password</label>
                                <input class="form-control" type="password" name="newPassword" id="new-password">
                                <div class="valid-feedback">
                                    Looks Good!
                                </div>
                                <div class="invalid-feedback">
                                    Please type a valid password.
                                </div>
                            </div>


                        </div>
                </div>
                <div class="d-grid">
                    <button class="btn btn-success mt-3">Update Profile</button>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>

    <script type="text/javascript" src="js/dashboard.js"></script>